{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Studio",
  "version": "0.1.0",
  "identifier": "com.aistudio.app",
  "build": {
    "beforeDevCommand": "npm run dev --prefix ../../ui",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build --prefix ../../ui",
    "frontendDist": "../../ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "AI Studio",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}